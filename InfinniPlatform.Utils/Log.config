<?xml version="1.0" encoding="utf-8" ?>
<configuration>

  <!-- Examples: http://logging.apache.org/log4net/release/config-examples.html -->

  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
  </configSections>

  <log4net>

    <root>
      <level value="ERROR" />
      <appender-ref ref="RollingFileAppender" />
      <appender-ref ref="EventLogAppender" />
    </root>

    <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="ERROR" />
      </filter>
      <file value="..\Logs\log.txt" />
      <encoding value="utf-8" />
      <appendToFile value="true" />
      <rollingStyle value="Size" />
      <maxSizeRollBackups value="500" />
      <maximumFileSize value="10MB" />
      <staticLogFileName value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%newline%date [Thread %thread] %-5level - %message%newline" />
      </layout>
    </appender>

    <appender name="EventLogAppender" type="log4net.Appender.EventLogAppender">
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="FATAL" />
      </filter>
      <applicationName value="MultiCare"/>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [Thread %thread] %-5level - %message%newline" />
      </layout>
    </appender>

  </log4net>

</configuration>