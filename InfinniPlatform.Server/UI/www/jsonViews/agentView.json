{
  "$schema": "https://raw.githubusercontent.com/InfinniPlatform/InfinniUI-schema/master/View/View.json",
  "OnLoaded": "{  }",
  "Text": "Add new agent",
  "Parameters": [{
    "Name": "Agent"
  }],
  "DataSources": [{
    "RestDataSource": {
      "Name": "AgentsDataSource",
      "SettingParams": {
        "Method": "POST",
        "Path": "/server/addAgent",
        "Data": {}
      }
    }
  }],
  "Items": [{
    "TextBox": {
      "Name": "AddressBox",
      "LabelText": "Address",
      "Value": {
        "Source": "AgentsDataSource",
        "Property": "$.Address"
      }
    }
  }, {
    "TextBox": {
      "Name": "PortBox",
      "LabelText": "Port",
      "Value": {
        "Source": "AgentsDataSource",
        "Property": "$.Port"
      }
    }
  }, {
    "TextBox": {
      "Name": "NameBox",
      "LabelText": "Name",
      "Value": {
        "Source": "AgentsDataSource",
        "Property": "$.Name"
      }
    }
  }, {
    "Button": {
      "Name": "AddButton",
      "Text": "Add agent",
      "Action": {
        "SaveAction": {
          "DestinationValue": {
            "Source": "AgentsDataSource"
          },
          "CanClose": true
        }
      }
    }
  }]
}