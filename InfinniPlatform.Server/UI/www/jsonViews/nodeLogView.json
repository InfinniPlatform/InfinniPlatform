{
  "$schema": "https://raw.githubusercontent.com/InfinniPlatform/InfinniUI-schema/master/View/View.json",
  "Text": "Infinni.Node log file",
  "Parameters": [{
    "Name": "AgentAddress"
  }, {
    "Name": "AgentPort"
  }],
  "DataSources": [{
    "RestDataSource": {
      "Name": "NodeLogSource",
      "GettingParams": {
        "Method": "GET",
        "Path": "/server/nodeLog",
        "Data": {
          "Address": "<%Address%>",
          "Port": "<%Port%>"
        },
        "Params": {
          "Address": {
            "Source": "AgentAddress"
          },
          "Port": {
            "Source": "AgentPort"
          }
        }
      },
      "UpdatingItemsConverter": "{ return new Array(args.value.Result); }"
    }
  }],
  "Items": [{
    "TextBox": {
      "Multiline": true,
      "LineCount": 30,
      "Value": {
        "Source": "NodeLogSource",
        "Property": "$"
      }
    }
  }, {
    "Button": {
      "Text": "Close",
      "Action": {
        "CancelAction": {}
      }
    }
  }]
}