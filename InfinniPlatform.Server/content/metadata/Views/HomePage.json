{
  "$schema": "https://raw.githubusercontent.com/InfinniPlatform/InfinniUI-schema/master/View/View.json",
  "DataSources": [{
    "RestDataSource": {
      "Name": "AgentsDataSource",
      "GettingParams": {
        "Method": "get",
        "Path": "/Server/Agents",
        "Data": {}
      },
      "IsLazy": false,
      "ResolvePriority": 0
    }
  }],
  "Items": [{
    "Label": {
      "Value": "Список агентов:"
    }
  }, {
    "StackPanel": {
      "Items": [
        {
        "ListBox": {
          "Name": "Agents",
          "ItemTemplate": {
            "StackPanel": {
              "ViewMode": "FormGroup",
              "Orientation": "Horizontal",
              "Items": [{
                "Label": {
                  "Value": {
                    "Source": "AgentsDataSource",
                    "Property": "#.Address"
                  }
                }
              }, {
                "Label": {
                  "Value": {
                    "Source": "AgentsDataSource",
                    "Property": "#.Port"
                  }
                }
              }, {
                "Label": {
                  "Value": {
                    "Source": "AgentsDataSource",
                    "Property": "#.Token"
                  }
                }
              }]
            }
          },
          "Items": {
            "Source": "AgentsDataSource",
            "Property": ""
          }
        }
      }]
    }
  }],
  "OnLoaded": "{ ShowInfo(context, args); }"
}