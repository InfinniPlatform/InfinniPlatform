<?xml version="1.0" encoding="utf-8"?>

<configuration>

  <!-- Examples: http://logging.apache.org/log4net/release/config-examples.html -->

  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>

  <log4net>

    <root>
      <level value="INFO" />
    </root>

    <logger name="ILog" additivity="false">
      <level value="INFO" />

      <appender-ref ref="RollingFileAppender" />
      <!--<appender-ref ref="EventUdpAppender" />-->
    </logger>

    <logger name="IPerformanceLog" additivity="false">
      <level value="INFO" />

      <appender-ref ref="PerformanceRollingFileAppender" />
      <!--<appender-ref ref="PerformanceUdpAppender" />-->
    </logger>

    <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="log.txt" />
      <encoding value="utf-8" />
      <appendToFile value="true" />
      <rollingStyle value="Size" />
      <maxSizeRollBackups value="500" />
      <maximumFileSize value="10MB" />
      <staticLogFileName value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <!-- При необходимости доступна информация о пользователе {app.UserId}, {app.UserName} -->
        <conversionPattern value="%date{yyyy-MM-dd'T'HH:mm:ss.fffzzz} %-5level %-5thread %-30logger{1} [R:%-36X{app.RequestId} S:%X{server.RemoteIpAddress} %-36X{app.UserId} %X{app.UserName}] %message%newline" />
      </layout>
    </appender>

    <appender name="EventUdpAppender" type="log4net.Appender.UdpAppender">
      <remoteAddress value="localhost" />
      <remotePort value="17652" />
      <layout type="log4net.Layout.PatternLayout, log4net">
        <!-- При необходимости доступна информация о пользователе {app.UserId}, {app.UserName} -->
        <conversionPattern value="%date{yyyy-MM-dd'T'HH:mm:ss.fffzzz} %-5level %-5thread %-30logger{1} [R:%-36X{app.RequestId} S:%X{server.RemoteIpAddress} %-36X{app.UserId} %X{app.UserName}] %message%newline" />
      </layout>
    </appender>

    <appender name="PerformanceRollingFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="performance.txt" />
      <encoding value="utf-8" />
      <appendToFile value="true" />
      <rollingStyle value="Size" />
      <maxSizeRollBackups value="500" />
      <maximumFileSize value="10MB" />
      <staticLogFileName value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <!-- При необходимости доступна информация о пользователе {app.UserId}, {app.UserName} -->
        <conversionPattern value="%date{yyyy-MM-dd'T'HH:mm:ss.fffzzz} %-36X{app.RequestId} %logger{1} %-36X{app.UserId} %X{app.UserName} %message%newline" />
      </layout>
    </appender>

    <appender name="PerformanceUdpAppender" type="log4net.Appender.UdpAppender">
      <remoteAddress value="localhost" />
      <remotePort value="17651" />
      <layout type="log4net.Layout.PatternLayout, log4net">
        <!-- При необходимости доступна информация о пользователе {app.UserId}, {app.UserName} -->
        <conversionPattern value="%date{yyyy-MM-dd'T'HH:mm:ss.fffzzz} %-36X{app.RequestId} %logger{1} %-36X{app.UserId} %X{app.UserName} %message%newline" />
      </layout>
    </appender>

  </log4net>

</configuration>