<?xml version="1.0" encoding="utf-8"?>
<package xmlns="http://schemas.microsoft.com/packaging/2011/08/nuspec.xsd">
    <metadata>
        <id>InfinniPlatform</id>
        <version>{VERSION}</version>
        <authors>Infinnity Solutions</authors>
        <owners>Infinnity Solutions</owners>
        <requireLicenseAcceptance>false</requireLicenseAcceptance>
        <description>InfinniPlatform. Commit hash: {COMMIT}.</description>
        <copyright>Copyright 2015</copyright>
        <dependencies>
            <dependency id="InfinniPlatform.Sdk" version="{VERSION}" />
        </dependencies>
    </metadata>
    <files>
        <!-- Libraries -->
        <file target="lib\net45" src="*.dll" exclude="*.Tests.dll;InfinniPlatform.Sdk.dll" />
        <file target="lib\net45" src="*.pdb" exclude="*.Tests.pdb;InfinniPlatform.Sdk.pdb" />
        <!-- Metadata -->
        <file target="content\metadata\Authorization" src="content\InfinniPlatform\metadata\Authorization\**\*.*" />
        <!-- Configurations -->
        <file target="lib\net45\App.config" src="InfinniPlatform.NodeServiceHost.dll.config" />
        <file target="lib\net45\AppLog.config" src="AppLog.config" />
        <file target="lib\net45\AppCommon.json" src="AppCommon.json" />
        <file target="lib\net45\AppExtension.json" src="AppExtension.json" />
        <!-- For Linux debugging -->
        <file target="lib\net45\InfinniPlatform.ServiceHost.exe" src="InfinniPlatform.ServiceHost.exe" />
        <file target="lib\net45\InfinniPlatform.ServiceHost.exe.config" src="InfinniPlatform.ServiceHost.exe.config" />
    </files>
</package>