{
  /* Настройки приложения */
  "app": {
    /* Уникальное имя приложения, используется для изоляции данных между приложениями (по умолчанию - 'InfinniPlatform') */
    "Name": "InfinniPlatform"
  },
  /* Настройки хостинга приложения */
  "host": {
    /* Адрес или доменное имя (по умолчанию - 'localhost') */
    "Name": "localhost",
    /* Номер порта (по умолчанию - 9900) */
    "Port": 9900
  },
  /* Настройки аутентификации через Cookie */
  "authCookie": {
    /* Домен для создания cookie (значения по умолчанию нет, при развертывании в кластере - указать шаблон) */
    /* Если равен ".mycluster.local", тогда "node1.mycluster.local" и "node2.mycluster.local" будут считаться допустимыми */
    "CookieDomain": ""
  },
  /* Настройки аутентификации через ADFS */
  "authAdfs": {
    /* Разрешает аутентификацию через ADFS (допустимые значения - true или false, по умолчанию - false) */
    "Enable": false,
    /* Адрес сервера ADFS (например, 'myadfs.org:1234', значения по умолчанию нет) */
    "Server": "Adfs-Server",
    /* URI защищенного ресурса ADFS (например, 'https://InfinniPlatform', значения по умолчанию нет) */
    "ResourceUri": ""
  },
  /* Настройки аутентификации через ЕСИА */
  "authEsia": {
    /* Разрешает аутентификацию через ЕСИА (допустимые значения - true или false, по умолчанию - false) */
    "Enable": false,
    /* Базовый адрес сервера ЕСИА (например, 'https://esia.ru', значения по умолчанию нет) */
    "Server": "Esia-Server",
    /* ClientId приложения в ЕСИА (значения по умолчанию нет) */
    "ClientId": "Esia-Client-Id",
    /* ClientSecret приложения в ЕСИА (используется Thumbprint сертификата приложения, значения по умолчанию нет) */
    "ClientSecret": "Esia-Client-Certificate-Thumbprint"
  },
  /* Настройки аутентификации через Google+ */
  "authGoogle": {
    /* Разрешает аутентификацию через Google+ (допустимые значения - true или false, по умолчанию - false) */
    "Enable": false,
    /* ClientId приложения в Goole+ (значения по умолчанию нет) */
    "ClientId": "Google-Client-Id",
    /* ClientSecret приложения в Goole+ (значения по умолчанию нет) */
    "ClientSecret": "Google-Client-Secret"
  },
  /* Настройки аутентификации через Facebook */
  "authFacebook": {
    /* Разрешает аутентификацию через Facebook (допустимые значения - true или false, по умолчанию - false) */
    "Enable": false,
    /* ClientId приложения в Facebook (значения по умолчанию нет) */
    "ClientId": "Facebook-Client-Id",
    /* ClientSecret приложения в Facebook (значения по умолчанию нет) */
    "ClientSecret": "Facebook-Client-Secret"
  },
  /* Настройки аутентификации через ВКонтакте */
  "authVk": {
    /* Разрешает аутентификацию через ВКонтакте (допустимые значения - true или false, по умолчанию - false) */
    "Enable": false,
    /* ClientId приложения в ВКонтакте (значения по умолчанию нет) */
    "ClientId": "Vk-Client-Id",
    /* ClientSecret приложения в ВКонтакте (значения по умолчанию нет) */
    "ClientSecret": "Vk-Client-Secret"
  },
  /* Настройки подключения к Redis */
  "redis": {
    /* Адрес или доменное имя (по умолчанию - 'localhost') */
    "Host": "localhost",
    /* Номер порта (по умолчанию - 6379) */
    "Port": 6379,
    /* Номер базы данных (по умолчанию - 0) */
    "Database": 0,
    /* Пароль подключения (значения по умолчанию нет) */
    "Password": "",
    /* Размер буфера чтения (по умолчанию - 512) */
    "ReadBufferSize": 512,
    /* Размер буфера записи (по умолчанию - 512) */
    "WriteBufferSize": 512,
    /* Таймаут подключения в миллисекундах (по умолчанию - 0, отсутствие таймаута) */
    "ConnectionTimeout": 0,
    /* Количество попыток подключения (по умолчанию - 10) */
    "MaxReconnectRetries": 10,
    /* Размер пула подключений (по умолчанию - 0, то есть неограничен) */
    "PoolSize": 0
  },
  /* Настройки подключения к MongoDB */
  "mongodb": {
    /* Список узлов кластера (по умолчанию - 'localhost:27017') */
    /* Каждый узел должен быть представлен в формате 'host:port' */
    "Nodes": [
      "localhost:27017"
    ],
    /* Имя пользователя в механизме аутентификации по умолчанию (значения по умолчанию нет) * /
    /* Начиная с MongoDB 3.0 по умолчанию используется SCRAM-SHA-1 вместо MONGODB-CR) */
    "UserName": "",
    /* Пароль пользователя в механизме аутентификации по умолчанию (значения по умолчанию нет) */
    /* Начиная с MongoDB 3.0 по умолчанию используется SCRAM-SHA-1 вместо MONGODB-CR) */
    "Password": ""
  },
  /* Настройки подключения к RabbitMQ */
  "rabbitmq": {
    /* Адрес или доменное имя (по умолчанию - 'localhost') */
    "HostName": "localhost",
    /* Номер порта (по умолчанию - 5672) */
    "Port": 5672,
    /* Имя пользователя (значения по умолчанию нет) */
    "UserName": "",
    /* Пароль пользователя (значения по умолчанию нет) */
    "Password": ""
  },
  /* Настройки подключения к ElasticSearch */
  "elasticSearch": {
    /* Список базовых адресов узлов ElasticSearch (по умолчанию - 'http://localhost:9200') */
    "Nodes": [
      "http://localhost:9200"
    ],
    /* Логин для доступа к ElasticSearch через Shield (значения по умолчанию нет) */
    "Login": "",
    /* Пароль для доступа к ElasticSearch через Shield (значения по умолчанию нет) */
    "Password": "",
    /* Разрешить трассировку запросов к ElasticSearch (значение по умолчанию - false) */
    /* При включении желательно указать уровень DEBUG в AppLog.config */
    "EnableTrace": false,
    /* Разрешить resolve вложенных документов */
    "EnableResolve": true
  },
  /* Настройки хранения BLOB и файлов */
  "blobStorage": {
    /* Базовый каталог для хранения файлов системы (по умолчанию - 'BlobStorage') */
    "BaseDirectory": "BlobStorage"
  },
  /* Настройки хранения пользователей */
  "userStorage": {
    /* Таймаут сброса кэша пользователей в минутах (минимум - 1, по умолчанию - 30) */
    "UserCacheTimeout": 30
  },
  /* Настройки кэширования данных */
  "cache": {
    /* Тип кэша для приложения (возможные варианты: 'Memory', 'Redis', 'TwoLayer', по умолчанию - 'Memory') */
    /* При развертывании приложения в промышленной инфраструктуре рекомендуемое значение - 'TwoLayer' */
    "Type": "Memory"
  },
  /* Настройки печатных представлений */
  "printView": {
    /* Местоположение утилиты wkhtmltopdf - http://wkhtmltopdf.org/ (по умолчанию - генерируется автоматически с учетом операционной системы) */
    /* В Linux, если X Server не установлен, утилиту wkhtmltopdf следует запускать через xvfb, поместив код запуска в /usr/local/bin/wkhtmltopdf.sh */
    /* Пример содержимого файла /usr/local/bin/wkhtmltopdf.sh (заголовок обязателен): */
    /* #!/bin/bash
    /* xvfb-run -a -s "-screen 0 640x480x16" wkhtmltopdf "$@" */
    /* Также нужно не забыть установить права на исполнение: chmod a+x /usr/local/bin/wkhtmltopdf.sh */
    "HtmlToPdfUtilCommand": "",
    /* Формат аргументов утилиты wkhtmltopdf - http://wkhtmltopdf.org/ (по умолчанию - генерируется автоматически с учетом операционной системы) */
    "HtmlToPdfUtilArguments": "",
    /* Каталог для хранения временных файлов при генерации HTML/PDF (по умолчанию - каталог временных файлов учетной записи пользователя) */
    "HtmlToPdfTemp": ""
  },
  /* Настройки хранения метаданных */
  "metadata": {
    /* Каталог с файлами метаданных (по умолчанию - 'content') */
    "ContentDirectory": "content",
    /* Разрешает обновление кэша метаданных на сервере при их изменении на диске (для разработчиков) */
    "EnableFileSystemWatcher": false
  }
}