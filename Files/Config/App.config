<?xml version="1.0" encoding="utf-8"?>

<configuration>

    <appSettings>

        <!-- Настройки log4net - https://logging.apache.org/log4net/release/manual/configuration.html -->

        <!-- Путь к файлу конфигурации логирования (по умолчанию - 'AppLog.config') -->
        <add key="log4net.Config" value="AppLog.config" />
        <!-- Наблюдать за файлом конфигурации логирования -->
        <add key="log4net.Config.Watch" value="True"/>

        <!-- Настройки приложения -->

        <!-- Путь к конфигурационному файлу с базовыми настройками приложения (по умолчанию - 'AppCommon.json') -->
        <add key="AppCommonConfig" value="AppCommon.json" />
        <!-- Путь к конфигурационному файлу с настройками приложения, которые могут расширять или перекрывать базовые настройки (по умолчанию - 'AppExtension.json') -->
        <add key="AppExtensionConfig" value="AppExtension.json" />

    </appSettings>

