{
  "id": "https://raw.githubusercontent.com/InfinniPlatform/InfinniPlatform/master/Files/Config/Schema/Heartbeat.json",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Heartbeat",
  "description": "Настройки приложения InfinniPlatform.Heartbeat.",
  "type": "object",
  "properties": {
    "Period": {
      "description": "Периодичность оповещения сервера (в секундах).",
      "type": "integer",
      "default": 60
    },
    "ServerAddress": {
      "description": "Адрес сервера Infinni.Server.",
      "type": "string",
      "default": "localhost:9900"
    },
    "Token": {
      "description": "Уникальный token для аутентификации при обмене данными между агентом и сервером.",
      "type": "string",
      "default": null
    }
  },
  "required": [
    "Period",
    "ServerAddress",
    "Token"
  ]
}