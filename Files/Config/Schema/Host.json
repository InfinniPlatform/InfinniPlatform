{
    "id":"https://raw.githubusercontent.com/InfinniPlatform/InfinniPlatform/f-infinniClusterTools/Files/Config/Schema/Host.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Host",
    "description": "Настройки хостинга приложения",
    "type": "object",
    "properties": {
        "Name": {
            "description": "Адрес или доменное имя.",
            "type": "string",
            "default": "localhost"
        },
        "Port": {
            "description": "Номер порта.",
            "type": "integer",
            "default": 9900
        }
    },
    "required": [
        "Name",
        "Port"
    ]
}