{
  "Name": "MetadataView",
  "Image": "System/Metadata_16x16",
  "Text": {
    "PropertyBinding": {
      "DataSource": "MainDataSource",
      "Property": "Name"
    }
  },
  "DataSources": [
    {
      "MetadataDataSource": {
        "Name": "MainDataSource",
        "FillCreatedItem": true,
        "MetadataType": "Generator"
      }
    }
  ],
  "LayoutPanel": {
    "StackPanel": {
      "Name": "MetadataPagePanel",
      "Items": [
        {
          "CodeEditor": {
            "Name": "MetadataEditor",
            "Syntax": "JavaScript",
            "Formatter": "JsonObjectFormatter",
            "Value": {
              "PropertyBinding": {
                "DataSource": "MainDataSource",
                "Property": "{this}"
              }
            }
          }
        },
        {
          "ToolBar": {
            "Name": "MetadataToolBar",
            "Items": [
              {
                "ToolBarButton": {
                  "Name": "MetadataSaveButton",
                  "Hotkey": "Ctrl+S",
                  "Text": "Save",
                  "Image": "Actions/Save_16x16",
                  "Action": {
                    "SaveAction": {
                      "CanClose": false,
                      "DataSource": "MainDataSource"
                    }
                  }
                }
              },
              {
                "ToolBarButton": {
                  "Name": "MetadataCancelButton",
                  "Text": "Cancel",
                  "Image": "Actions/Cancel_16x16",
                  "Action": {
                    "CancelAction": {
                      "DataSource": "MainDataSource"
                    }
                  }
                }
              }
            ]
          }
        }
      ]
    }
  }
}